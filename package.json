{
  "name": "vscode-deno-html-tools",
  "displayName": "deno-html-tools",
  "repository": {
    "url": "https://github.com/galiazzi/vscode-deno-html-tools"
  },
  "description": "",
  "version": "0.0.11",
  "publisher": "dayan",
  "icon": "icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./client/out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "deno lint client server",
    "test": "node ./client/out/test/runTest"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Deno HTML Tools",
      "properties": {
        "denoHTMLTools.lint": {
          "type": "boolean",
          "default": false,
          "description": "If true, diagnostics will made"
        },
        "denoHTMLTools.lintOnSave": {
          "type": "boolean",
          "default": false,
          "description": "If true, diagnostics will made only on file save"
        },
        "denoHTMLTools.denoConfig": {
          "type": "string",
          "default": null,
          "markdownDescription": "The file path to a deno configuration file. The path can be either be relative to the workspace, or an absolute path",
          "scope": "window",
          "examples": [
            "./deno.jsonc",
            "/path/to/deno.jsonc",
            "C:\\path\\to\\deno.jsonc"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  }
}
