{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.rulers": [
    80
  ],
  "files.exclude": {
    "out": false
  },
  "search.exclude": {
    "out": true
  },
  "typescript.tsc.autoDetect": "off",
  "denoHTMLTools.lint": true,
  "denoHTMLTools.lintOnSave": true,
  "deno.enable": false,
  "[javascript][json][markdown]": {
    "editor.defaultFormatter": "dayan.vscode-deno-html-tools"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dayan.vscode-deno-html-tools"
  }
}
